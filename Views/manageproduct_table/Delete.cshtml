@model AzureWebApplication.Models.manageproduct_table
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "삭제 페이지";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var id = @Context.Session.GetString("id");
}

<h1>물품 정보 삭제</h1>
<hr />
@if (id == "admin")
{
    <h3>이 정보를 삭제하시겠습니까?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                물품 번호
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.product_no)
            </dd>
            <dt class="col-sm-2">
                물품 이름
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.product_name)
            </dd>
            <dt class="col-sm-2">
                물품 형태
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.product_type)
            </dd>
            <dt class="col-sm-2">
                제조 날짜
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.manufacture_date)
            </dd>
            <dt class="col-sm-2">
                납품 날짜
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.buy_date)
            </dd>
            <dt class="col-sm-2">
                유통 기한
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.expired_date)
            </dd>
            <dt class="col-sm-2">
                수량
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.product_amount)
            </dd>
            <dt class="col-sm-2">
                가격
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.price)
            </dd>
        </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="product_no" />
            <input type="submit" value="삭제" class="btn btn-danger" /> |
            <a asp-controller="manageproduct_table" asp-action="Manage">물품 정보 리스트로 돌아가기</a>|
            <a href="#" onclick="history.go(-1)">뒤로가기</a>|
            <a asp-controller="Home" asp-action="logout">로그아웃</a>
        </form>
    </div>
}
else
{
    <h5>로그인을 해주세요. 관리자 모드로만 사용이 가능합니다.</h5>
    <a asp-controller="Home" asp-action="login">로그인</a>
    <a href="#" onclick="history.go(-1)">뒤로가기</a>
}