@model AzureWebApplication.Models.manageproduct_table
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "물품 정보 추가 페이지";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var id = @Context.Session.GetString("id");   
}

<h1>물품 정보 추가</h1>
<hr />
@if (id == "admin")
{
    <form asp-action="Create">
        <dl class="row">
            <dt class="col-sm-2">
                물품 번호:
            </dt>
            <dd class="col-sm-10">
                <input type="text" name="product_no" />
            </dd>
            <dt class="col-sm-2">
                물품 이름:
            </dt>
            <dd class="col-sm-10">
                <input type="text" name="product_name"  />
            </dd>
            <dt class="col-sm-2">
                물품 형태:
            </dt>
            <dd class="col-sm-10">
                <input type="text" name="product_type"  />
            </dd>
            <dt class="col-sm-2">
                제조 날짜:
            </dt>
            <dd class="col-sm-10">
                <input type="text" name="manufacture_date" />
            </dd>
            <dt class="col-sm-2">
                납품 날짜:
            </dt>
            <dd class="col-sm-10">
                <input type="text" name="buy_date"  />
            </dd>
            <dt class="col-sm-2">
                유통 기한:
            </dt>
            <dd class="col-sm-10">
                <input type="text" name="expired_date"  />
            </dd>
            <dt class="col-sm-2">
                수량:
            </dt>
            <dd class="col-sm-10">
                <input type="text" name="product_amount"  />
            </dd>
            <dt class="col-sm-2">
                가격:
            </dt>
            <dd class="col-sm-10">
                <input type="text" name="price"  />
            </dd>
        </dl>
        <input type="submit" value="물품 리스트 추가" class="btn btn-primary" />
        <br />
        <a asp-controller="manageproduct_table" asp-action="Manage">리스트로 돌아가기</a>|
        <a href="#" onclick="history.go(-1)">뒤로가기</a>|
        <a asp-controller="Home" asp-action="Logout">로그 아웃</a>
    </form>

}
else
{
    <h5>로그인을 해주세요. 관리자 모드로만 사용이 가능합니다.</h5>
    <a asp-controller="Home" asp-action="Login">로그인</a>
    <a href="#" onclick="history.go(-1)">뒤로가기</a>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
